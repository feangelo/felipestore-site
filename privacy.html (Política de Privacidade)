        tag:"Adulto"
      },
      {
        id:5,
        name:"Kit Halteres Ajust√°veis",
        category:"Fitness",
        price:259.9,
        image:"https://cdn.pixabay.com/photo/2017/03/04/20/58/dumbbell-2118088_960_720.jpg",
        desc:"Par de halteres com ajuste de carga para treinar em casa.",
        tag:"Fitness"
      },
      {
        id:6,
        name:"Cama Pet Confort",
        category:"Pets",
        price:119.9,
        image:"https://cdn.pixabay.com/photo/2017/03/30/14/59/dog-2187484_960_720.jpg",
        desc:"Caminha macia e lav√°vel para c√£es e gatos, diversas medidas.",
        tag:"Pets"
      }
    ];

    const grid = document.getElementById("produtos");
    const searchInput = document.getElementById("searchInput");
    const menuLinks = document.querySelectorAll("nav.menu a");

    let cart = [];
    let currentProduct = null;

    function formatPrice(v){
      return v.toLocaleString("pt-BR",{style:"currency",currency:"BRL"});
    }

    function renderProducts(filterCat="todos", searchTerm=""){
      grid.innerHTML = "";
      const term = searchTerm.toLowerCase();

      products
        .filter(p=>{
          const catOk = filterCat==="todos" || p.category===filterCat;
          const textOk = !term || p.name.toLowerCase().includes(term) || p.category.toLowerCase().includes(term);
          return catOk && textOk;
        })
        .forEach(p=>{
          const card = document.createElement("article");
          card.className = "product-card";

          card.innerHTML = `
            <div class="product-tag">${p.tag || ""}</div>
            <img src="${p.image}" alt="${p.name}">
            <div class="product-name">${p.name}</div>
            <div class="product-category">${p.category}</div>
            <div class="product-price">${formatPrice(p.price)}</div>
            <div class="product-actions">
              <button class="btn-sec" data-id="${p.id}" data-action="details">Detalhes</button>
              <button class="btn-primary" data-id="${p.id}" data-action="add">Adicionar</button>
            </div>
          `;

          grid.appendChild(card);
        });
    }

    renderProducts();

    // filtro por categoria
    let currentCat = "todos";
    menuLinks.forEach(link=>{
      link.addEventListener("click",e=>{
        e.preventDefault();
        currentCat = link.dataset.cat;
        renderProducts(currentCat, searchInput.value);
      });
    });

    // busca
    searchInput.addEventListener("input",()=>{
      renderProducts(currentCat, searchInput.value);
    });

    // clique em produto (delega√ß√£o)
    grid.addEventListener("click",e=>{
      const btn = e.target.closest("button");
      if(!btn) return;
      const id = Number(btn.dataset.id);
      const product = products.find(p=>p.id===id);
      if(!product) return;

      if(btn.dataset.action==="add"){
        addToCart(product);
      }else if(btn.dataset.action==="details"){
        openProductModal(product);
      }
    });

    /* carrinho */
    const cartOverlay = document.getElementById("cartOverlay");
    const openCartBtn = document.getElementById("openCart");
    const closeCartBtn = document.getElementById("closeCart");
    const cartItemsEl = document.getElementById("cartItems");
    const cartTotalEl = document.getElementById("cartTotal");
    const cartCountEl = document.getElementById("cartCount");
    const checkoutBtn = document.getElementById("checkoutBtn");

    function addToCart(product){
      const existing = cart.find(item=>item.id===product.id);
      if(existing){
        existing.qty += 1;
      }else{
        cart.push({...product,qty:1});
      }
      updateCartUI();
    }

    function removeFromCart(id){
      cart = cart.filter(item=>item.id!==id);
      updateCartUI();
    }

    function updateCartUI(){
      cartItemsEl.innerHTML = "";
      let total = 0;
      let count = 0;

      if(cart.length===0){
        cartItemsEl.innerHTML = "<p style='font-size:13px;color:#bbb;'>Seu carrinho est√° vazio.</p>";
      }else{
        cart.forEach(item=>{
          const line = document.createElement("div");
          line.className = "cart-item";
          line.innerHTML = `
            <div>
              <div>${item.name}</div>
              <span class="qty">${item.qty} x ${formatPrice(item.price)}</span>
            </div>
            <div>
              <strong>${formatPrice(item.qty*item.price)}</strong><br>
              <button data-id="${item.id}">remover</button>
            </div>
          `;
          cartItemsEl.appendChild(line);
          total += item.qty*item.price;
          count += item.qty;
        });
      }

      cartTotalEl.textContent = formatPrice(total);
      cartCountEl.textContent = count;
    }

    openCartBtn.addEventListener("click",()=>{cartOverlay.classList.add("active");});
    closeCartBtn.addEventListener("click",()=>{cartOverlay.classList.remove("active");});

    cartItemsEl.addEventListener("click",e=>{
      if(e.target.tagName==="BUTTON"){
        const id = Number(e.target.dataset.id);
        removeFromCart(id);
      }
    });

    /* modal produto */
    const productModal = document.getElementById("productModal");
    const closeModalBtn = document.getElementById("closeModal");
    const modalName = document.getElementById("modalName");
    const modalImage = document.getElementById("modalImage");
    const modalDesc = document.getElementById("modalDesc");
    const modalPrice = document.getElementById("modalPrice");
    const modalAddToCartBtn = document.getElementById("modalAddToCart");

    function openProductModal(product){
      currentProduct = product;
      modalName.textContent = product.name;
      modalImage.src = product.image;
      modalDesc.textContent = product.desc;
      modalPrice.textContent = formatPrice(product.price);
      productModal.classList.add("active");
    }

    closeModalBtn.addEventListener("click",()=>productModal.classList.remove("active"));
    productModal.addEventListener("click",e=>{
      if(e.target===productModal) productModal.classList.remove("active");
    });

    modalAddToCartBtn.addEventListener("click",()=>{
      if(currentProduct) addToCart(currentProduct);
      productModal.classList.remove("active");
      cartOverlay.classList.add("active");
    });

    /* checkout */
    const checkoutOverlay = document.getElementById("checkoutOverlay");
    const closeCheckoutBtn = document.getElementById("closeCheckout");
    const checkoutForm = document.getElementById("checkoutForm");

    checkoutBtn.addEventListener("click",()=>{
      if(cart.length===0){
        alert("Seu carrinho est√° vazio.");
        return;
      }
      checkoutOverlay.classList.add("active");
    });

    closeCheckoutBtn.addEventListener("click",()=>checkoutOverlay.classList.remove("active"));
    checkoutOverlay.addEventListener("click",e=>{
      if(e.target===checkoutOverlay) checkoutOverlay.classList.remove("active");
    });

    checkoutForm.addEventListener("submit",e=>{
      e.preventDefault();
      if(cart.length===0){
        alert("Seu carrinho est√° vazio.");
        return;
      }
      // simula√ß√£o de pedido
      alert("Pedido recebido com sucesso! (simula√ß√£o)\nEm breve a FelipeStore entrar√° em contato para finalizar o pagamento.");
      cart = [];
      updateCartUI();
      checkoutOverlay.classList.remove("active");
      cartOverlay.classList.remove("active");
      checkoutForm.reset();
    });
  </script>

</body>
</html>




